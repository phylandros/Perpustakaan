<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#0766AD"
    >
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="Nama Pengguna"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#FFF"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/undertoolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shapehome">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pindai kode QR untuk presensi \nperpustakaan"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#EEEE"/>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/undertoolbar"
        android:layout_above="@id/barbawah"
        android:layout_marginBottom="-16dp"

        >

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/scanBox"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"

            android:background="@drawable/scan_box_background" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/barbawah"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:gravity="bottom"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mau cari Perpus ? "
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#0766AD"
            android:textSize="18dp"/>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/searchbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Perpus Terdekat "
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textColor="#0766AD"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/image"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perpus Kampus"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Bekasi"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="12dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buka Hari ini, Jam 9:00 - 12:30 "
                    android:layout_marginLeft="12dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shapedisable"
                android:textColor="#FFF"
                android:text="Pinjam Buku"
                android:textStyle="bold"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>