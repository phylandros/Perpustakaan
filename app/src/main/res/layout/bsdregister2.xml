<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0766AD">


    <LinearLayout
        android:background="@drawable/dialogbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lengkapi Data Diri"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#0766AD"
                android:textSize="26dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile"
                        android:layout_marginBottom="25dp"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/camera"
                        android:background="@drawable/avatarcircle"
                        android:translationX="108dp"
                        android:translationY="100dp"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Kartu Tanda Penduduk"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16dp"/>


                <EditText
                    android:id="@+id/etNoKtp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukan no KTP"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16dp"/>


                <EditText
                    android:id="@+id/etAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukan alamat"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. Telepon"
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/etNotel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Masukkan no telepon"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textColorHint="#000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnlanjut2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shapemasuk"
                android:text="Daftar"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>