<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.BukuActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0766AD"
                android:orientation="vertical"
                android:id="@+id/coordinator_layout"
                >
                <LinearLayout
                    android:id="@+id/toolbarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/backinput"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:src="@drawable/baseline_west_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"/>

                        <TextView
                            android:id="@+id/test"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:text="Input Buku"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="#FFF"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashanggota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dialogbg"
                    android:orientation="vertical"
                    >
                    <!--            MULAI KODE BUAT ISI DI TEMPAT KOSONG ANGGOTA-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tambah Buku"
                            android:layout_margin="25dp"
                            android:textStyle="bold"
                            android:textColor="#0766AD"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan nama buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengarang"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan pengarang buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Penerbit"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan penerbit buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tahun Terbit"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan tahun terbit"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan deskripsi buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gambar Buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan deskripsi buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kategori Buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Masukan kategori buku"
                            android:fontFamily="@font/robotoreg"
                            android:textColorHint="#000"
                            android:textColor="#000"
                            android:textSize="14dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/btnlogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shapemasuk"
                    android:textColor="#FFF"
                    android:text="Tambah Buku"
                    android:textStyle="bold"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>